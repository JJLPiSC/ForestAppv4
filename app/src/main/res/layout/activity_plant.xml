<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btn_resume"
        tools:context="com.coding.jjlop.forestappv4.Views.Plant"
        />

    <Button
        android:id="@+id/btn_resume"
        android:text="@string/resume"
        android:layout_above="@+id/txt_ln"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toggleNetworkUpdates" />
    <TextView
        android:text="Longitud:"
        android:id="@+id/txt_ln"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_above="@+id/longitudeValueNetwork"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_la"
        android:text="Latitud:"
        android:textAlignment="center"
        android:layout_marginStart="100dp"
        android:layout_above="@+id/latitudeValueNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/longitudeValueNetwork"
        android:text="00000"
        android:layout_above="@+id/snp_tr"
        android:layout_marginEnd="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/latitudeValueNetwork"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/latitudeValueNetwork"
        android:text="00000"
        android:layout_above="@+id/snp_tr"
        android:layout_marginStart="80dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/snp_tr"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:textAlignment="center"
        android:layout_above="@+id/txt_alias"
        android:popupTheme="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <EditText
        android:id="@+id/txt_alias"
        android:hint="Alias"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.EditText"
        android:layout_above="@+id/btn_Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_Add"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_above="@+id/btn_Save"
        android:textColor="#FFF"
        android:text="Agregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_Save"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimary"
        android:text="Guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>